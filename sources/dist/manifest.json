{
  "manifest_version": 2,

  "name": "Pedometer: mouse move counter",
  "description": "Count how many moves make your mouse",
  "version": "1.3",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "browser_action": {
    "default_icon": "icon-128.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/content_script.js"],
    "run_at": "document_end"
  }],

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "storage",
    "<all_urls>"
  ]
}